<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/display"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DisplayMain" >

    <Button
        android:id="@+id/btnS_Tree"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/butStack"
        android:background="@drawable/white"
        android:layout_below="@+id/butStack"
        
        android:layout_marginTop="42dp"
        android:onClick="@string/btnTree"
        android:text="@string/btnTree" />

    <Button
        android:id="@+id/btnQueue"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnS_Tree"
        android:background="@drawable/white"
        android:layout_alignBottom="@+id/btnS_Tree"
        android:layout_marginLeft="36dp"
        android:layout_toRightOf="@+id/btnS_Tree"
        android:onClick="@string/btnQueue"
        android:text="@string/btnQueue" />

    <Button
        android:id="@+id/btnLink"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:background="@drawable/white"
        android:layout_above="@+id/btnS_Tree"
        android:layout_alignLeft="@+id/btnQueue"
        android:onClick="LINK"
        android:text="@string/btnLink" />

    <Button
        android:id="@+id/butStack"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:background="@drawable/white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="126dp"
        android:onClick="@string/btnStack"
        android:text="@string/btnStack" />

</RelativeLayout>